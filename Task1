import java.util.Scanner;

public class Task1 {
  public static void main(String[] args) {
    Scanner sc = new Scanner(System.in);

    System.out.println("1) Enter your name:");
    String name = sc.nextLine();
    System.out.println("Enter your contact (phone):");
    String contact = sc.nextLine();
    System.out.println("Enter your email:");
    String email = sc.nextLine();
    System.out.println("Enter your password:");
    String password = sc.nextLine();
    System.out.println("\n--- User Details ---");
    System.out.println("Name: " + name);
    System.out.println("Contact: " + contact);
    System.out.println("Email: " + email);
    System.out.println("Password: " + password);

    System.out.println("\n2) Add three numbers. Enter first number:");
    double a = readDouble(sc);
    System.out.println("Enter second number:");
    double b = readDouble(sc);
    System.out.println("Enter third number:");
    double c = readDouble(sc);
    double sum = a + b + c;
    System.out.println("Sum = " + sum);

    System.out.println("\n3) Swap two numbers. Enter first number:");
    double x = readDouble(sc);
    System.out.println("Enter second number:");
    double y = readDouble(sc);
    System.out.println("Before swap: x = " + x + ", y = " + y);
    double temp = x;
    x = y;
    y = temp;
    System.out.println("After swap: x = " + x + ", y = " + y);

    System.out.println("\n4) Area of a circle. Enter radius:");
    double r = readDouble(sc);
    double area = Math.PI * r * r;
    System.out.printf("Area = %.4f%n", area);

    sc.close();
  }

  static double readDouble(Scanner sc) {
    while (!sc.hasNextDouble()) {
      System.out.println("Please enter a valid number:");
      sc.next();
    }
    return sc.nextDouble();
  }
}
